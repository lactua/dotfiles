* {
    bg-col:  #191724;
    bg-col-light: #1f1d2e;
    border-col: #c4a7e7;
    selected-col: #1f1d2e;
    accent: #c4a7e7;
    fg-col: #e0def4;
    grey: #6e6a86;

    width: 600;
    font: "Opensans Regular 16";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    border-color: @border-col;
    border-radius: 22;
    border: 5px solid;
    background-color: @bg-col;
}

mainbox {
    background-color: @bg-col;
    padding: 25px;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg-col;
    border-radius: 5px;
}

prompt {
    background-color: @accent;
    padding: 5px;
    text-color: @bg-col;
    border-radius: 3px;
  	margin: 0px 5px 0px 0px;
  	horizontal-align: 0.5;
  	vertical-align: 0.5;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    text-color: @fg-col;
    background-color: @bg-col;
    vertical-align: 0.5;
}

listview {
    padding: 15px 0px 0px 0px;
    columns: 1;
    lines: 4;
    background-color: @bg-col;
}

element {
    margin: 3px 0px 0px 0px;
    padding: 6px;
    background-color: @bg-col;
    text-color: @fg-col;
}

element-text {
	vertical-align: 0.5;
}

element-icon {
    size: 34px;
    vertical-align: 0.5;
}

element selected.normal {
    background-color:  @accent;
    border-radius: 10px;
    text-color: @bg-col;
}

mode-switcher {
    spacing: 0;
}

button {
    enabled: false;
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 6px;
    margin: 20px 0px 0px 20px;
    text-color: @accent;
    background-color: @bg-col-light;
}
